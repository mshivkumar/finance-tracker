<div class="result-block">
  <%= render 'layouts/alerts' %>
</div>

<% if @stock %>
  <div class="card card-header result-block">
    <strong>Symbol: </strong><%= @stock.ticker_symbol %>
    <strong>Name: </strong><%= @stock.name %>
    <strong>Price: </strong><%= @stock.price %>
    <% if current_user.can_track_stock?(@stock.ticker_symbol) %>
      <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: @stock.ticker_symbol),
                  class: "btn btn-sm btn-success", method: :post %>
    <% else %>
    <span class="badge badge-secondary">
      You are already tracking
      <% if !current_user.under_stock_limit? %>
      10 stocks
      <% end %>
      <% if current_user.stock_already_tracked?(@stock.ticker_symbol) %>
      this stock
      <% end %>
    </span>
    <% end %>
  </div>
<% end %>